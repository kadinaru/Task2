<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="414.0" prefWidth="524.0" style="-fx-background-color: #808080;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.task4.Controller">
   <children>
      <ImageView fx:id="imageView" fitHeight="360.0" fitWidth="557.0" layoutX="-1.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="startButton" layoutX="14.0" layoutY="373.0" mnemonicParsing="false" text="Start" textFill="#68a168">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="stopButton" layoutX="58.0" layoutY="373.0" mnemonicParsing="false" text="Stop" textFill="#cf7676">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="backButton" layoutX="115.0" layoutY="373.0" mnemonicParsing="false" text="Back" textFill="#717171">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="nextButton" layoutX="158.0" layoutY="373.0" mnemonicParsing="false" text="Next" textFill="#717171">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="chooseDirButton" layoutX="299.0" layoutY="373.0" mnemonicParsing="false" onAction="#chooseDirectory" text="Выбрать каталог" />
      <MenuButton fx:id="formatButton" layoutX="418.0" layoutY="373.0" mnemonicParsing="false" text="Выбрать формат" />
   </children>
</AnchorPane>
